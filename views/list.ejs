<%- include('./layout/header.ejs') %>
</head>
<body>
<%- include('./layout/nav.ejs') %>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/home">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">My List</li>
    </ol>
  </nav>
    <main class="p-4 m-2">
        <% if(products.length>0){ %>
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">_id</th>
                <th scope="col">Name</th>
                <th scope="col">Location</th>
                <th scope="col">Handle</th>
              </tr>
            </thead>
            <tbody>
            <% for(let product of products){ %>
              <tr>
                <th scope="row"><%= i++ %></th>
                <td><%= product._id %></td>
                <td><%= product.name%></td>
                <td><%= product.location%></td>
                <td class="btn-group">
                  <a href="/view-page/<%= product._id %> " class="btn btn-outline-success">View</a>
                    <a href="/edit/<%= product._id %>" class="btn btn-outline-primary">Edit</a>
                    <a href="/delete/<%= product._id %>" class="btn btn-outline-danger">Delete</a></td>
              </tr>
            <% } %>
            </tbody>
          </table>
          <% }else{ %>
            <h1>Product not Found</h1>
        <% } %>
    </main>

<%- include('./layout/foot.ejs') %>
</body>
</html>