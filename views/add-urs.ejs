<%- include('./layout/header.ejs') %> 
<style>
  @media (max-width:700px){
      .navBar{
          display:none;
      }
      .naBarAlt{
          display:flex;
      }
  }
</style>
</head>
    <body>
        <%- include('./layout/nav.ejs') %>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><% if(edit){ %>Edit-Yours<% }else{ %>  Add-Yours<% }%></li>
          </ol>
        </nav>
        <main class="container">
            <form class="row col-md-10 border border-secondary rounded p-md-3" method="POST" action="<% if(edit){ %>/edit<% }else{ %>/add-yours<% }%>">
                  <div class="form-group col-md-4">
                    <label for="inputName4">Name</label>
                    <input type="text" class="form-control" name="name" id="inputName4"value="<% if(edit){ %><%= product.name %><% }%>" placeholder="Name">
                  </div>
                  <div class="form-group col-md-4">
                    <label for="inputPlace4">Place</label>
                    <input type="Place" class="form-control" name="place" id="inputPlace4"value="<% if(edit){ %><%= product.place %><% }%>" placeholder="Place">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPhoto4">Photo</label>
                    <input type="file" class="form-control"name="photo" id="inputPhoto4" placeholder="Photo">
                  </div>
                <div class="form-group col-md-5">
                  <label for="inputNumber">Contact-Number</label>
                  <input type="text" class="form-control"name="no" id="inputNumber"value="<% if(edit){ %><%= product.no %><% }%>" placeholder="Number for Contacting">
                </div>
                <div class="form-group col-md-5">
                  <label for="inputlm2">Land Mark</label>
                  <input type="text" class="form-control"name="mark" id="inputlm2"value="<% if(edit){ %><%= product.mark %><% }%>" placeholder="Land Mark(Near Which)">
                </div>
                <div class="d-flex">
                    <div class="form-group col-md-5 col-lg-3 me-2">
                      <label for="inputCity">City</label>
                      <input type="text" class="form-control"name="city"value="<% if(edit){ %><%= product.city %><% }%>" id="inputCity">
                    </div>
                    <div class="form-group col-md-4 me-2">
                      <label for="inputState">State</label>
                      <select id="inputState"name="state" value="<% if(edit){ %><%= product.state %><% }%>"class="form-control">
                        <option selected>Choose...</option>
                        <option>...</option>
                      </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputZip">Zip</label>
                        <input type="text" class="form-control"name="zip"value="<% if(edit){ %><%= product.zip %><% }%>" id="inputZip">
                    </div>
                    
                </div>
                <div class="form-group col-md-6">
                    <label>Image URL</label>
                    <input type="text" class="form-control" name="imgUrl"value="<% if(edit){ %><%= product.image %><% }%>" placeholder="Image URL" />
                </div>
                <div class="form-group col-md-2 me-2">
                    <label for="inputState">Location</label>
                    <select id="inputState"name="location" class="form-control">
                      <option selected>Choose...</option>
                      <option>Madurai</option>
                      <option>Tirunelveli</option>
                      <option>Chennai</option>
                      <option>Thiruvallur</option>
                    </select>
                  </div>
                  <div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Descrition</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1"name="desc" rows="5"><% if(edit){ %><%= product.desc %><% }%></textarea>
                      </div>
                  </div>
                <div class="form-group">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                      Check me out
                    </label>
                  </div>
                </div>
                <% if(edit){ %> 
                  <input type="hidden" name="_id" value="<%= product._id %>" />
                <% } %> 
                <button type="submit" class="btn btn-primary col-md-1">Sign in</button>
              </form>
              
          </main>
        <%- include('./layout/foot.ejs') %> 
    </body>
</html>